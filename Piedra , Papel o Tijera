options = ("rock","paper", "scissors","spock","lizard")
print("Options: rock,paper,scissors,spock,lizard ")
player_score = 0
computer_score = 0
import random

while player_score < 3 and computer_score < 3:

 player = input( "enter your choice : ")
 computer = random.choice(options)
 print ("computer choice : " , computer)


 if player not in options:
     print("Invalid choice")
 elif player == computer:
     print("It's a tie!")
 elif (player == "spock" and computer == "rock") or \
     (player == "scissors" and computer == "lizard") or \
     (player == "lizard" and computer == "paper") or \
     (player == "paper" and computer == "spock") or \
     (player == "spock" and computer == "scissors") or \
     (player == "lizard" and computer == "spock") or \
     (player == "rock" and computer == "lizard") or \
     (player == "rock" and computer == "scissors") or \
     (player == "paper" and computer == "rock") or \
     (player == "scissors" and computer == "paper"):
         print("Player wins!")
         player_score += 1
 else:
     print("Computer wins!")
     computer_score +=1 

     print("score -> player :" , player_score,"computer:", computer_score)
     print("------")

if player_score == 3:
 print("congratulations!")

else:
    print(" computer won the match, better luck next time ")
